<T3DataStructure>
    <sheets>
        <sDEF>
            <ROOT>
                <TCEforms>
                    <sheetTitle>LLL:EXT:tgm_gce/Resources/Private/Language/locallang_be.xlf:tx_tgmgce_flex.general</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <settings.flex.latest>
                        <TCEforms>
                            <label>
                                Latest view verwenden (Zeigt nur den neuesten Datensatz nach Datum)
                            </label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.flex.latest>
                    <settings.flex.crop>
                        <TCEforms>
                            <label>
                                Texte croppen (Stellt zwei variablen im Template zu verfügung descrPreview und descrRest) !Nur in latest ansicht
                            </label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.flex.crop>
                    <settings.flex.cropLength>
                        <TCEforms>
                            <label>
                                Anzahl an Zeichen nach den gecroppt werden soll !Nur in latest ansicht
                            </label>
                            <config>
                                <type>input</type>
                            </config>
                        </TCEforms>
                    </settings.flex.cropLength>
                    <settings.flex.listPid>
                        <TCEforms>
                            <label>
                                PID zur Listenansicht, steht im Template zu Verfügung als listPid z.B. für ein Link zu allen Downloads
                            </label>
                            <config>
                                <type>input</type>
                            </config>
                        </TCEforms>
                    </settings.flex.listPid>
                    <settings.flex.orderBy>
                        <TCEforms>
                            <label>
                                Order By
                            </label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Backend sorting</numIndex>
                                        <numIndex index="1">sorting</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Title</numIndex>
                                        <numIndex index="1">title</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">Date</numIndex>
                                        <numIndex index="1">date</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.flex.orderBy>
                    <settings.flex.orderType>
                        <TCEforms>
                            <label>
                                Order Type
                            </label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">Ascending</numIndex>
                                        <numIndex index="1">ASC</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">Descending</numIndex>
                                        <numIndex index="1">DESC</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.flex.orderType>
                    <settings.flex.filter.categories>
                        <TCEforms>
                            <label>
                                Kategorien
                            </label>
                            <config>
                                <type>select</type>
                                <renderType>selectTree</renderType>
                                <treeConfig>
                                    <parentField>parent</parentField>
                                    <appearance>
                                        <maxLevels>99</maxLevels>
                                        <showHeader>TRUE</showHeader>
                                    </appearance>
                                </treeConfig>
                                <foreign_table>sys_category</foreign_table>
                                <size>20</size>
                                <minitems>0</minitems>
                                <maxitems>99</maxitems>
                            </config>
                        </TCEforms>
                    </settings.flex.filter.categories>
                    <settings.flex.filter.categoriesConjunction>
                        <TCEforms>
                            <label>
                                Kategeorie Konjunktion
                            </label>
                            <config>
                                <type>select</type>
                                <renderType>selectSingle</renderType>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">
                                            UND
                                        </numIndex>
                                        <numIndex index="1">and</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">
                                            ODER
                                        </numIndex>
                                        <numIndex index="1">or</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </settings.flex.filter.categoriesConjunction>
                    <settings.flex.pagination>
                        <TCEforms>
                            <label>
                                Seitennavigation
                            </label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.flex.pagination>
                    <settings.flex.dataTables>
                        <TCEforms>
                            <label>
                                DataTables Aktivieren : Wenn DataTables aktiviert ist, ist die TYPO3 pagination deaktiviert (required Bootstrap und jQuery)
                            </label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.flex.dataTables>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>